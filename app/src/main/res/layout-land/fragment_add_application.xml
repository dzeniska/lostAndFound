<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainConstraint"
    android:background="@color/theme_orange_color_dark">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/theme_orange_color_dark"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/choosePhotoViewPager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/choosePhotoTabLayout"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@color/invisible"
                app:tabBackground="@drawable/tab_selector"
                app:tabIndicatorHeight="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnLoc"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@drawable/custom_orange_button_background"
                android:contentDescription="@string/description_loc_unselected"
                android:elevation="8dp"
                android:padding="4dp"
                android:src="@drawable/ic_gps"
                android:scaleType="fitStart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/white_38"
                />

            <TextView
                android:id="@+id/tvLoc"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="48dp"
                android:elevation="8dp"
                android:gravity="center"
                android:text="@string/tv_loc_unselected"
                android:ellipsize="end"
                android:lines="1"
                android:fontFamily="@font/t_bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/btnLoc"
                app:layout_constraintEnd_toEndOf="@id/btnLoc"
                app:layout_constraintStart_toStartOf="@id/btnLoc"
                app:layout_constraintTop_toTopOf="@id/btnLoc" />

            <ImageButton
                android:id="@+id/btnSelectCat"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@drawable/custom_orange_button_background"
                android:contentDescription="@string/description_select_cat"
                android:elevation="8dp"
                android:padding="4dp"
                android:scaleType="fitStart"
                android:src="@drawable/ic_recycling"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnLoc"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/white_38"
                 />

            <TextView
                android:id="@+id/tvSelectCat"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="48dp"
                android:elevation="8dp"
                android:gravity="center"
                android:fontFamily="@font/t_bold"
                android:text="@string/tv_select_cat_lost_or_found"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/btnSelectCat"
                app:layout_constraintEnd_toEndOf="@id/btnSelectCat"
                app:layout_constraintStart_toStartOf="@id/btnSelectCat"
                app:layout_constraintTop_toTopOf="@id/btnSelectCat" />

            <ImageButton
                android:id="@+id/btnShowTelNum"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@drawable/custom_orange_button_background"
                android:contentDescription="@string/description_enter_tel_num"
                android:elevation="8dp"
                android:padding="4dp"
                android:scaleType="fitStart"
                android:src="@drawable/ic_add_phone"
                app:tint="@color/white_38"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnSelectCat"
                app:layout_constraintEnd_toEndOf="parent"
                 />
            <EditText
                android:id="@+id/etShowTelNum"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="48dp"
                android:elevation="8dp"
                android:gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:fontFamily="@font/t_bold"
                android:hint="@string/_375_45"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:imeOptions="actionDone"
                android:autofillHints="phone"
                android:inputType="phone"
                app:layout_constraintBottom_toBottomOf="@id/btnShowTelNum"
                app:layout_constraintEnd_toEndOf="@id/btnShowTelNum"
                app:layout_constraintStart_toStartOf="@id/btnShowTelNum"
                app:layout_constraintTop_toTopOf="@id/btnShowTelNum" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilHeader"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                android:hint="@string/header"
                android:textColorHint="@color/white"
                app:backgroundTint="@color/white"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/white"
                app:layout_constraintBottom_toTopOf="@id/tilAdditionalInfo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnShowTelNum">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/t_bold"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/white"
                    android:imeOptions="actionDone"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAdditionalInfo"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/t_bold"

                android:hint="@string/additional_information"
                app:hintTextColor="@color/white"
                app:boxStrokeColor="@color/white"
                android:textColorHint="@color/white"
                app:backgroundTint="@color/white"
                app:layout_constraintBottom_toTopOf="@id/barrierInfoTop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilHeader">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAdditionalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/t_bold"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/white"
                    android:imeOptions="actionDone"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/smile"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="7dp"
                android:elevation="8dp"
                android:visibility="visible"
                tools:visibility="visible"
                android:src="@drawable/ic_found"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/tilAdditionalInfo"
                app:layout_constraintTop_toTopOf="@id/tilAdditionalInfo"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSmile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="24dp"
                android:background="@drawable/custom_list_smile_background"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintEnd_toEndOf="@id/tilAdditionalInfo"
                app:layout_constraintBottom_toTopOf="@id/tilAdditionalInfo"
                />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrierInfoTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="top"
                app:constraint_referenced_ids="tvInfo,btnInfo"/>

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/info"
                app:layout_constraintTop_toBottomOf="@id/barrierInfoTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnInfo"
                app:layout_constraintBottom_toTopOf="@id/barrierInfoBottom"
                />

            <ImageButton
                android:id="@+id/btnInfo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_orange_button_background"
                android:contentDescription="@string/description_info"
                android:elevation="8dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_info"
                app:layout_constraintTop_toBottomOf="@id/barrierInfoTop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvInfo"
                app:layout_constraintBottom_toTopOf="@id/barrierInfoBottom"
                />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrierInfoBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="tvInfo,btnInfo"/>

            <ImageButton
                android:id="@+id/btnPublish"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_margin="16dp"
                android:background="@drawable/custom_orange_button_background"
                android:contentDescription="@string/description_publish_an_ad"
                android:elevation="8dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_publish"
                app:tint="@color/white_38"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrierInfoBottom"
                />
           <!-- <TextView
                android:id="@+id/tvPublish"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/tv_publish"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:rotation="-45"
                android:elevation="8dp"
                app:layout_constraintTop_toTopOf="@id/btnPublish"
                app:layout_constraintStart_toStartOf="@id/btnPublish"
                app:layout_constraintEnd_toEndOf="@id/btnPublish"
                app:layout_constraintBottom_toBottomOf="@id/btnPublish"/>-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>