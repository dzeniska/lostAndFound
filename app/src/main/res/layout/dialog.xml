<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/theme_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Hello"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_goneMarginBottom="8dp"
        android:gravity="center"
        android:textSize="18sp"
        tools:text="Hello"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintBottom_toTopOf="@id/btn10"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupBtn10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btn10, tv10"
        />
    <ImageButton
        android:id="@+id/btn10"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:background="@drawable/image_button_background"
        android:scaleType="fitCenter"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMessage"
        android:contentDescription="@string/exit" />

    <TextView
        android:id="@+id/tv10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:gravity="center"
        android:textSize="18sp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="@id/btn10"
        app:layout_constraintEnd_toEndOf="@+id/btn10"
        app:layout_constraintStart_toStartOf="@id/btn10"
        app:layout_constraintTop_toTopOf="@+id/btn10"
        tools:text="exit" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupBtn20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btn20, tv20"
        />
    <ImageButton
        android:id="@+id/btn20"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:background="@drawable/image_button_background"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/btn10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn10"
        app:layout_constraintTop_toTopOf="@+id/btn10"
        android:contentDescription="@string/ok" />

    <TextView
        android:id="@+id/tv20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/ok"
        android:elevation="8dp"
        android:gravity="center"
        tools:text="ok"
        app:layout_constraintBottom_toBottomOf="@id/btn20"
        app:layout_constraintEnd_toEndOf="@+id/btn20"
        app:layout_constraintStart_toStartOf="@id/btn20"
        app:layout_constraintTop_toTopOf="@+id/btn20" />

</androidx.constraintlayout.widget.ConstraintLayout>